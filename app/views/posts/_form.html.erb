<h1 class="mb-4 text-center">Insert new Post</h1>
<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="form w-50">
    <%= form_with(model: [locals[:user], locals[:post]], local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
      <div class="form-group">
        <%= form.label :title, class: 'form-label' %>
        <%= form.text_field :title, class: 'form-control', required: true %>
        <div class="invalid-feedback">
          Please provide a title.
        </div>
      </div>
      <div class="form-group">
        <%= form.label :body, class: 'form-label' %>
        <%= form.text_area :body, class: 'form-control', rows: 5, required: true %>
        <div class="invalid-feedback">
          Please provide the body of the post.
        </div>
      </div>
      <%= form.submit 'Submit', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>